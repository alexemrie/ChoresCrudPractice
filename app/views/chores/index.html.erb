<div class="page-header">
  <h1>My Chores</h1>
</div>
<br>

<% @chores.each do |chore| %>

  <%= link_to chore.tasks, chore_path(chore) %> - <%= chore.due_date %>

  <%= link_to "Edit", edit_chore_path(chore) %>
  <%= link_to "Delete", chore_path(chore), method: "delete" %>
  <hr>
<% end %>

<br>

<%= link_to "New Chore", new_chore_path(@chore), class: "btn btn-primary" %>
